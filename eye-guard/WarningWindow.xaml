<Window x:Class="eye_guard.WarningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="护眼护土休息提示"
        Width="400"
        Height="200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="True">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title Bar -->
        <Grid Grid.Row="0" Background="#0066CC" Height="30">
            <TextBlock Text="护眼护土休息提示" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" FontWeight="Bold"/>
            <Button x:Name="CloseButton" Content="X" Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Background="Transparent" Foreground="White" BorderThickness="0" Click="CloseButton_Click"/>
        </Grid>
        
        <!-- Countdown Display with Action Button -->
        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="CountdownText" FontSize="16" Text="离休息还剩余时间: 60秒" VerticalAlignment="Center"/>
                <Button x:Name="ActionButton" Content="操作" Margin="20,0,0,0" Click="ActionButton_Click" VerticalAlignment="Center">
                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="立即休息(T)" Click="ImmediateRestMenuItem_Click"/>
                            <MenuItem Header="推迟休息(D)">
                                <MenuItem Header="3分钟" Click="Delay3MinutesMenuItem_Click"/>
                                <MenuItem Header="5分钟" Click="Delay5MinutesMenuItem_Click"/>
                                <MenuItem Header="8分钟" Click="Delay8MinutesMenuItem_Click"/>
                            </MenuItem>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
            </StackPanel>
        </Grid>
        
        <!-- Footer -->
        <Grid Grid.Row="2" Background="#F0F0F0" Height="30">
            <TextBlock Text="711健康导航，提供全方位的健康导航服务" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" Foreground="#666666"/>
        </Grid>
    </Grid>
</Window>