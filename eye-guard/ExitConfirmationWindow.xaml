<Window x:Class="eye_guard.ExitConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="温馨提示!"
        Width="450"
        Height="200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="True">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Width" Value="150"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title Bar -->
        <Grid Grid.Row="0" Background="#0066CC" Height="30">
            <TextBlock Text="温馨提示!" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" FontWeight="Bold"/>
        </Grid>
        
        <!-- Content Area -->
        <Grid Grid.Row="1" Margin="10">
            <StackPanel Orientation="Horizontal">
                <Image Source="pack://application:,,,/System.Windows.Forms;component/System.Windows.Forms.Properties.Resources.exclamation.png" Width="48" Height="48" Margin="10,0,10,0"/>
                <TextBlock Text="退出眼睛护士将不能提醒您定时休息！为了您的健康着想，我们建议保持眼睛护士运行！" TextWrapping="Wrap" FontSize="14" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
        
        <!-- Button and ComboBox Area -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="ExitOptionComboBox" SelectedIndex="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0">
                        <ComboBoxItem Content="完全关闭退出"/>
                        <ComboBoxItem Content="暂时关闭10分钟"/>
                        <ComboBoxItem Content="暂时关闭15分钟"/>
                        <ComboBoxItem Content="暂时关闭20分钟"/>
                        <ComboBoxItem Content="暂时关闭1小时"/>
                    </ComboBox>
            <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                <Button x:Name="OKButton" Content="确定(Y)" Click="OKButton_Click"/>
                <Button x:Name="CancelButton" Content="取消(C)" Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>