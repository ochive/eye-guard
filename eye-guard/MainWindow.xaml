<Window x:Class="eye_guard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:eye_guard"
        mc:Ignorable="d"
        Title="护眼软件" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="护眼软件" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="剩余时间" FontSize="16" Margin="0,0,0,10"/>
            <TextBlock x:Name="TimeRemainingText" Text="30:00" FontSize="48" FontWeight="Bold" HorizontalAlignment="Center"/>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="StartButton" Content="开始" Width="100" Height="30" Margin="0,0,10,0"/>
            <Button x:Name="PauseButton" Content="暂停" Width="100" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
